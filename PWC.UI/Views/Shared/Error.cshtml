@using PWC.Infrastructure;
@{
    ViewData["Title"] = "Error";
    Layout = null;
    string StackTrace = ViewData["HandleException"] as string;
}

<!-- - var navbarShadow = true-->
<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta name="description" content="Stack admin is super flexible, powerful, clean &amp; modern responsive bootstrap 4 admin template with unlimited possibilities.">
    <meta name="keywords" content="admin template, stack admin template, dashboard template, flat admin template, responsive admin template, web app">
    <meta name="author" content="PIXINVENT">
    <title>Error</title>
    <link rel="apple-touch-icon" href="../../../app-assets/images/ico/apple-icon-120.png">
    <link rel="shortcut icon" type="image/x-icon" href="../../../app-assets/images/ico/favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i%7COpen+Sans:300,300i,400,400i,600,600i,700,700i"
          rel="stylesheet">
    <!-- BEGIN VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="/Assets/css/vendors.css">
    <!-- END VENDOR CSS-->
    <!-- BEGIN STACK CSS-->
    <link rel="stylesheet" type="text/css" href="/Assets/css/app.css">
    <!-- END STACK CSS-->
    <!-- BEGIN Page Level CSS-->
    <link href="~/Assets/vendors/css/extensions/sweetalert.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/Assets/css/pages/error.css">
    <!-- END Page Level CSS-->
    <link rel="shortcut icon" href="@(ViewBag.StaticResources)/images/Favicon/favicon_@(ViewBag.RenderingMode).ico@(ViewBag.BundleVersion)" />
</head>
<body class="vertical-layout vertical-menu 1-column   menu-expanded blank-page blank-page"
      data-open="click" data-menu="vertical-menu" data-col="1-column">
    <!-- ////////////////////////////////////////////////////////////////////////////-->
    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <section class="flexbox-container">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <div class="col-10 p-0">
                            <div class="card-header bg-transparent border-0">
                                <h2 class="text-danger text-bold-600 text-center mb-2">TPS has encountered an error.</h2>
                                <h3 class="text-center">
                                    Please tell us about this problem.
                                    TPS has created an error report that you can send to help us fix the problem.
                                </h3>
                            </div>
                            <div class="offset-3 col-6">
                                <div class="card-content">
                                    <fieldset class="row py-2">
                                        <div class="col-12">
                                            <textarea id="UserMessage" style="max-height:20vh;min-height:60px;" class="form-control form-control-xl input-xl border-grey border-lighten-1 " placeholder="tell us about this problem"></textarea>
                                        </div>
                                    </fieldset>
                                    <div class="row py-2">
                                        <div class="col-12 col-sm-6 col-md-6">
                                            <a href="/" class="btn btn-primary btn-block"><i class="ft-home"></i> Back to Home</a>
                                        </div>
                                        <div class="col-12 col-sm-6 col-md-6">
                                            <input type="hidden" value="@StackTrace" name="ErrorMessage" id="ErrorMessage" />
                                            <button id="btnSendErrorReport" type="button" class="btn btn-danger btn-block"><i class="ft-message-circle"></i> Send Error Report</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <script src="~/Assets/js/core/libraries/jquery.min.js"></script>
    <script src="~/Assets/vendors/js/extensions/sweetalert.min.js"></script>
    <script src="~/Assets/vendors/js/vendors.min.js"></script>
    <script src="~/Assets/js/alert-helper.js"></script>
    <script src="~/Assets/js/ajax-helper.js"></script>
    <script src="/Assets/js/pages/error-page.js"></script>

</body>
</html>
